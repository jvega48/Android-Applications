<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black" >

    <ImageView
        android:id="@+id/txtFanImg"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/txtFanImg"
        android:src="@drawable/fan" />

    <ImageView
        android:id="@+id/txtWaveImg"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/txtFanImg"
        android:layout_below="@+id/txtFanImg"
        android:layout_marginTop="79dp"
        android:contentDescription="@string/txtWaveImg"
        android:src="@drawable/waves" />

    <Button
        android:id="@+id/btnFan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtFanImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="@string/btnFan"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnOcean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtWaveImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/btnOcean"
        android:textColor="#FFFFFF" />

</RelativeLayout>
